<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/input_bt2"
    tools:context=".mainmenu">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        tools:ignore="MissingConstraints">

        <Button
            android:id="@+id/btn_info"
            android:layout_width="45dp"
            android:layout_height="50dp"
            android:layout_gravity="right"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:backgroundTint="#3B4559"
            android:fontFamily="@font/bold"
            android:paddingRight="12dp"
            android:paddingLeft="12dp"
            android:includeFontPadding="false"
            android:isScrollContainer="false"
            android:shadowColor="#3B4559"
            android:textAllCaps="false"
            android:textColorHighlight="#3B4559"
            android:textSize="16sp"
            app:cornerRadius="8dp"
            app:icon="@drawable/ic_baseline_info_24"
            app:iconGravity="textStart"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.49"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_info"
            app:rippleColor="#3B4559"
            app:strokeColor="#3B4559" />

        <ImageView
            android:id="@+id/LoginImageView"
            android:layout_width="290dp"
            android:layout_height="92dp"
            android:layout_marginStart="35dp"
            android:layout_marginTop="86dp"
            android:layout_marginEnd="35dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_gravity="center"
            app:srcCompat="@drawable/bs11" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingTop="241dp"
        tools:ignore="MissingConstraints">

        <Button
            android:id="@+id/btn_stock"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#3B4559"
            android:fontFamily="@font/bold"
            android:includeFontPadding="false"
            android:isScrollContainer="false"
            android:shadowColor="#3B4559"
            android:text="Stock Barang"
            android:textAllCaps="false"
            android:textColorHighlight="#3B4559"
            android:textSize="16sp"
            app:cornerRadius="8dp"
            app:icon="@drawable/stockbarang"
            app:iconGravity="textStart"
            app:iconPadding="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.49"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView"
            app:rippleColor="#3B4559"
            app:strokeColor="#3B4559"
            app:strokeWidth="1dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingTop="305dp"
        tools:ignore="MissingConstraints">

        <Button
            android:id="@+id/btn_byr"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#3B4559"
            android:fontFamily="@font/bold"
            android:includeFontPadding="false"
            android:isScrollContainer="false"
            android:shadowColor="#3B4559"
            android:text="Kasir"
            android:textAllCaps="false"
            android:textColorHighlight="#3B4559"
            android:textSize="16sp"
            app:cornerRadius="8dp"
            app:icon="@drawable/kasir"
            app:iconGravity="textStart"
            app:iconPadding="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.49"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button"
            app:rippleColor="#3B4559"
            app:strokeColor="#3B4559"
            app:strokeWidth="1dp" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingTop="369dp"
        tools:ignore="MissingConstraints">

        <Button
            android:id="@+id/btn_rekap"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#3B4559"
            android:fontFamily="@font/bold"
            android:includeFontPadding="false"
            android:isScrollContainer="false"
            android:shadowColor="#3B4559"
            android:text="Rekapitulasi"
            android:textAllCaps="false"
            android:textColorHighlight="#3B4559"
            android:textSize="16sp"
            app:cornerRadius="8dp"
            app:icon="@drawable/rekapitulasi"
            app:iconGravity="textStart"
            app:iconPadding="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.49"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button2"
            app:rippleColor="#3B4559"
            app:strokeColor="#3B4559"
            app:strokeWidth="1dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingTop="444dp"
        tools:ignore="MissingConstraints">

        <Button
            android:id="@+id/button_logout"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#fff"
            android:fontFamily="@font/bold"
            android:includeFontPadding="false"
            android:isScrollContainer="false"
            android:shadowColor="#3B4559"
            android:text="Keluar"
            android:textAllCaps="false"
            android:textColor="#D73D3D"
            android:textColorHighlight="#D73D3D"
            android:textSize="16sp"
            app:cornerRadius="8dp"
            app:icon="@drawable/keluar"
            app:iconGravity="textStart"
            app:iconPadding="12dp"
            app:iconTint="#D73D3D"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.49"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button_logout"
            app:rippleColor="#3B4559"
            app:strokeColor="#D73D3D"
            app:strokeWidth="1dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingTop="595dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">

    </LinearLayout>

    <TextView
        android:id="@+id/HomeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/regular"
        android:text="Project 1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.971" />

</androidx.constraintlayout.widget.ConstraintLayout>