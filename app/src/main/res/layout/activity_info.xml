<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/input_bt2">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">

        <ImageView
            android:id="@+id/LoginImageView"
            android:layout_width="290dp"
            android:layout_height="92dp"
            android:layout_gravity="center"
            android:layout_marginStart="35dp"
            android:layout_marginTop="86dp"
            android:layout_marginEnd="35dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/bs11" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/text1"
            android:layout_width="350dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="250dp"
            android:fontFamily="@font/bold"
            android:gravity="center_vertical"
            android:text="Melalui Aplikasi ini kamu bisa:"
            android:textColor="#3B4559"
            android:textSize="18dp"></TextView>

        <TextView
            android:id="@+id/mengecek_st"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/regular"
            android:gravity="center_vertical"
            android:lineSpacingExtra="2sp"
            android:text="1. Mengecek stock opname barang."
            android:textSize="12dp"></TextView>

        <TextView
            android:id="@+id/poin2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/regular"
            android:gravity="center_vertical"
            android:lineSpacingExtra="2sp"
            android:text="2. Berbelanja dan melakukan pembayaran online."
            android:textSize="12dp"></TextView>

        <TextView
            android:id="@+id/poin3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/regular"
            android:gravity="center_vertical"
            android:lineSpacingExtra="2sp"
            android:text="3. Cek hasil pendapatan setiap hari dan prediksi \npendapatan besok."
            android:textSize="12dp"></TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">

        <Button
            android:id="@+id/btn_back"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="20dp"
            android:layout_marginTop="500dp"
            android:layout_marginEnd="20dp"
            android:height="40dp"
            android:backgroundTint="#3B4559"
            android:fontFamily="@font/bold"
            android:includeFontPadding="false"
            android:isScrollContainer="false"
            android:shadowColor="#3B4559"
            android:text="Kembali"
            android:textAllCaps="false"
            android:textColorHighlight="#3B4559"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editTextTextPersonName5"
            app:rippleColor="#3B4559"
            app:strokeColor="#3B4559" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>